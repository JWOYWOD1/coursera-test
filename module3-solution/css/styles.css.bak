body {
	background-color: #ffeed0;
	font-family: Times New Roman, Georgia, Garamond;
	font-size: 16px;
}

#header-nav {
	background-color: #9966cc;
	border-radius: 0;
	border: 0;
}

.navbar-brand {
  padding-top: 25px;
  height: 100px;
}

.navbar-brand h1 {
	font-family: 'Lora', serif;
	color: #557c3e;
	font-size: 2em; 
	font-weight: bold;
	text-shadow: 1px 1px 1px #222;
	margin-top: 0;
	margin-bottom:0;
	padding-bottom: 10px;
	line-height: .75;
	
}

.navbar-brand a:hover, .navbar-brand a:focus {
	text-decoration: none;
}

#nav-list {
  margin-top: 10px;
}
#nav-list a {
  color: #951C49;
  text-align: center;
}
#nav-list a:hover {
  background: #E7E7E7;
}
#nav-list a span {
  font-size: 1.8em;
}

.navbar-header button.navbar-toggler, .navbar-header{
  border: 1px solid #61122f;
}
.navbar-header button.navbar-toggler {
  clear: both;
  margin-top: -30px;
}

.menu-header{
	font-size: 1.5em;
	padding-bottom: 5px;
}

.menu-desc {
	background-color: #A7A6D9;
}

#footer-ref {
	background-color: #7688b7;
	color: white;
	margin-bottom:auto;
}

